<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Edit Comment</h1>

    <div id="formContainer">
        <form action="/campgrounds/<%= campground_slug %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="text">Your Comment:</label>
                <textarea class="form-control" name="comment[text]" id="text" rows="3">
                    <%= comment.text %>
                </textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Edit Comment">
            </div>
        </form>

        <a href="/campgrounds/<%= campground_slug %>">Back</a>
    </div>
</div>

<% include ../partials/footer %>