<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-8 col-md-6 col-lg-4">
        <h1 class="h3 mb-3 font-weight-normal text-center">Add New Comment to <%= campground.name %></h1>
        <form action="/campgrounds/<%= campground.slug %>/comments" method="POST">
            <div class="form-group">
                <label for="text">Your Comment:</label>
                <textarea class="form-control" name="comment[text]" id="text" rows="3" required autofocus></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Comment">
            </div>
        </form>

        <a href="/campgrounds/<%= campground.slug %>">Back</a>
    </div>
</div>

<% include ../partials/footer %>