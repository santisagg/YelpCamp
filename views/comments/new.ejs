<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Add New Comment to <%= campground.name %></h1>

    <div id="formContainer">
        <form action="/campgrounds/<%= campground.slug %>/comments" method="POST">
            <div class="form-group">
                <label for="text">Your Comment:</label>
                <textarea class="form-control" name="comment[text]" id="text" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Comment">
            </div>
        </form>

        <a href="/campgrounds/<%= campground.slug %>">Back</a>
    </div>
</div>

<% include ../partials/footer %>