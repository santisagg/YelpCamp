<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-8 col-md-6 col-lg-4">
        <h1 class="h3 mb-3 font-weight-normal text-center">Create a new Campground</h1>
        <form action="/campgrounds" method="POST">
            <div class="form-row">
                <div class="form-group col-12">
                    <label for="name">Campground Name:</label>
                    <input class="form-control" type="text" name="name" placeholder="Cuckoo's Nest" id="name" required>
                </div>
                <div class="form-group col-12">
                    <label for="image">Image URL:</label>
                    <input class="form-control" type="text" name="image" placeholder="http://your.image.url" id="image" required> 
                </div>
                <div class="form-group col-sm-6">
                    <label for="price">Price:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-text">$</div>
                        <input class="form-control" type="number" name="price" value="0.00" id="price" min="0.00" step="0.01" required>
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="availability">Availability:</label>
                    <input class="form-control" type="text" name="availability" placeholder="May-September" id="availability" required> 
                </div>
                <div class="form-group col-sm-6">
                    <label for="extras">Extras:</label>
                    <input class="form-control" type="text" name="extras" placeholder="Shower, Wi-fi, ..." id="extras" required> 
                </div>
                <div class="form-group col-sm-6">
                    <label for="contact">Contact:</label>
                    <input class="form-control" type="text" name="contact" placeholder="2109876543" id="contact" required> 
                </div>
                <div class="form-group col-12">
                    <label for="description">Description:</label>
                    <textarea class="form-control" name="description" placeholder="Enter a description" id="description" rows="3" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Create Campground">
            </div>
        </form>

        <a href="/campgrounds"><i class="fa fa-arrow-left"></i> Back</a>
    </div>
</div>

<% include ../partials/footer %>