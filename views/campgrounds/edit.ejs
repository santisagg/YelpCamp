<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-8 col-md-6 col-lg-4">
        <h1 class="h3 mb-3 font-weight-normal text-center">Edit <%= campground.name %></h1>
        <form action="/campgrounds/<%= campground.slug %>?_method=PUT" method="POST">
            <div class="form-row">
                <div class="form-group col-12">
                    <label for="name">Campground Name:</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" id="name" required autofocus>
                </div>
                <div class="form-group col-12">
                    <label for="image">Image URL:</label>
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" id="image" required> 
                </div>
                <div class="form-group col-sm-6">
                    <label for="price">Price:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-text">$</div>
                        <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" id="price" min="0.00" step="0.01" required>
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="availability">Availability:</label>
                    <input class="form-control" type="text" name="campground[availability]" value="<%= campground.availability %>" id="availability" required> 
                </div>
                <div class="form-group col-sm-6">
                    <label for="extras">Extras:</label>
                    <input class="form-control" type="text" name="campground[extras]" value="<%= campground.extras %>" id="extras" required> 
                </div>
                <div class="form-group col-sm-6">
                    <label for="contact">Contact:</label>
                    <input class="form-control" type="text" name="campground[contact]" value="<%= campground.contact %>" id="contact" required> 
                </div>
                <div class="form-group col-12">
                    <label for="description">Description:</label>
                    <textarea class="form-control" name="campground[description]" id="description" rows="3" required><%= campground.description %></textarea>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update Campground">
            </div>
        </form>

        <a href="/campgrounds"><i class="fa fa-arrow-left"></i> Back</a>
    </div>
</div>

<% include ../partials/footer %>