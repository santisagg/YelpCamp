<% include ../partials/header %>

<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card mb-4">
            <img class="card-img-top" src="<%= campground.image %>" alt="Campground Image">
            <div class="card-body">
                <p class="float-right font-weight-bold">
                    $<%= campground.price %>/night   
                </p>
                <h5 class="card-title">
                    <%= campground.name %>
                </h5>
                <p class="card-text">
                    <%= campground.description %>
                </p>
                <hr>
                <p>
                    <em>Submitted By: <strong><a href="/users/<%= campground.author.id %>"><%= campground.author.username %></a></strong>, <%= moment(campground.createdAt).fromNow() %></em>
                </p>
                <% if(currentUser && campground.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
                    <a href="/campgrounds/<%= campground.slug %>/edit" class="btn btn-warning">Edit</a>
                    <form class="deleteForm" action="/campgrounds/<%= campground.slug %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>
        </div>
        <div class="text-right">
            <a href="/campgrounds/<%= campground.slug %>/comments/new" class="btn btn-success">Add New Comment</a>
        </div>
        <div class="card mt-4">
            <ul class="list-group list-group-flush">
                <% campground.comments.forEach(function(comment) { %>
                        <li class="list-group-item">
                            <div class="float-left">
                                <a href="/users/<%= campground.author.id %>">
                                    <strong><%= comment.author.username %></strong>
                                </a>
                                
                                <p><em><%= comment.text %></em></p>
                            </div>
                            <div class="float-right">
                                <p>
                                    <em><%= moment(comment.createdAt).fromNow() %></em>
                                </p>
                                
                                <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
                                    <a href="/campgrounds/<%= campground.slug %>/comments/<%= comment._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                    <form class="deleteForm" action="/campgrounds/<%= campground.slug %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                <% }; %>
                            </div>
                        </li>        
                <% }); %>
            </ul>
        </div>
    </div>
</div>

<% include ../partials/footer %>