<% include partials/header %>

<div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3">
        <h1 class="h3 mb-3 font-weight-normal text-center">Sign In</h1>
        <form class="form-signin" action="/login" method="POST">
            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" class="form-control firstInput" name="username" placeholder="Username" required autofocus>
            <label for="password" class="sr-only">Password</label>
            <input type="password" id="password" class="form-control lastInput" name="password" placeholder="Password" required>
            <input class="btn btn-lg btn-primary btn-block" type="submit"value="Sign In">
        </form>
        <div class="pt-3">
            <a href="/campgrounds"><i class="fa fa-arrow-left"></i> Back</a>
            <a href="/forgot" class="float-right">Forgot your password?</a>
        </div>
    </div>
</div>

<% include partials/footer %>