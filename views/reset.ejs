<% include partials/header %>

<div class="row">
    <h1 class="text-center">Reset Password</h1>

    <div id="formContainer">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="password">New Password:</label>
                <input class="form-control" type="password" name="password" id="password" autofocus="autofocus" required>
            </div>
            <div class="form-group">
                <label for="confirm">Confirm Password:</label>
                <input class="form-control" type="password" name="confirm" id="confirm" required>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Change Password">
            </div>

            <a href="/campgrounds">Back</a>
        </form>
    </div>
</div>

<% include partials/footer %>