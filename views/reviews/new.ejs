<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <h1 class="h3 mb-3 font-weight-normal text-center">Submit a Review for:<br><%= campground.name %></h1>
        <form action="/campgrounds/<%= campground.slug %>/reviews" method="POST">
            <div class="form-group">
                <label for="rating">Leave a Rating:</label>
                <fieldset class="starability-basic form-group" id="rating">
                    <div>
                        <input type="radio" name="review[rating]" value="5" id="first-rate5" checked />
                        <label for="first-rate5" title="5 stars - Amazing">
                            <%- '<span class="fas fa-star checked"></span>'.repeat(5) %>
                        </label>
                        <input type="radio" name="review[rating]" value="4" id="first-rate4" />
                        <label for="first-rate4" title="4 stars - Very Good">
                            <%- '<span class="fas fa-star checked"></span>'.repeat(4) %>
                        </label>
                        <input type="radio" name="review[rating]" value="3" id="first-rate3" />
                        <label for="first-rate3" title="3 stars - Average">
                            <%- '<span class="fas fa-star checked"></span>'.repeat(3) %>
                        </label>
                        <input type="radio" name="review[rating]" value="2" id="first-rate2" />
                        <label for="first-rate2" title="2 stars - Not Good">
                            <%- '<span class="fas fa-star checked"></span>'.repeat(2) %>
                        </label>
                        <input type="radio" name="review[rating]" value="1" id="first-rate1" />
                        <label for="first-rate1" title="1 star - Terrible">
                            <%- '<span class="fas fa-star checked"></span>'.repeat(1) %>
                        </label>
                    </div>
                </fieldset>
            </div>
            <div class="form-group">
                <label for="text">Your Review:</label>
                <textarea class="form-control" name="review[text]" id="text" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit Review">
            </div>
        </form>

        <a href="/campgrounds/<%= campground.slug %>"><i class="fa fa-arrow-left"></i> Back</a>
    </div>
</div>

<% include ../partials/footer %>